{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom",
    ],
    "declaration": true,
    "outDir": "./dist/",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}